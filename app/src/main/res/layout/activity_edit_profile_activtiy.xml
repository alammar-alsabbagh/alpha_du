<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply"
                android:layout_gravity="right"
                android:textSize="@dimen/fifty_smth"
                android:layout_marginRight="20dp"
                />
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                android:background="@color/colorPrimaryDark">.

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryDark">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_pic"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:src="@drawable/drawable_photo" />

                        <TextView
                            android:id="@+id/full_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/profile_pic"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Ahmad Edilbi"
                            android:textColor="@color/app_yellow"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/skill_displayed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/full_name"
                            android:gravity="center"
                            android:text="@string/str11"
                            android:textColor="@color/app_yellow"
                            android:textSize="16dp" />
                    </LinearLayout>
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/edit_profile"
                        android:layout_margin="10dp"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/colorPrimaryDark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="10">



                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:paddingLeft="10dp"
                            android:text="@string/str12"
                            android:textColor="@color/app_yellow"
                            android:textSize="16dp" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="16dp"
                            android:layout_weight="2"
                            android:src="@drawable/edit_profile" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha="0.4"
                        android:background="@drawable/line_divider"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="left"
                            android:src="@drawable/location" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="9"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/str13"
                                android:textColor="@color/app_yellow" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:alpha="0.6"
                                android:hint="Not Answered"
                                android:textColor="@color/app_yellow"
                                android:singleLine="true"
                                android:textColorHint="#aaF6C523"

                                />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:alpha="0.4"
                        android:background="@drawable/line_divider"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="left"
                            android:src="@drawable/phone_call" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="9"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/str14"
                                android:textColor="@color/app_yellow" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:alpha="0.6"
                                android:hint="Not Answered"
                                android:textColor="@color/app_yellow"
                                android:singleLine="true"
                                android:textColorHint="#aaF6C523"
                                />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:alpha="0.4"
                        android:background="@drawable/line_divider"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="left"
                            android:src="@drawable/personal_message" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="9"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/str15"
                                android:textColor="@color/app_yellow" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:alpha="0.6"
                                android:hint="Not Answered"
                                android:textColor="@color/app_yellow"
                                android:textColorHint="#aaF6C523"
                                android:singleLine="true"/>
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="20dp"
                        android:alpha="0.4"
                        android:background="@drawable/line_divider"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="left"
                            android:src="@drawable/my_cause" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="9"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/str16"
                                android:textColor="@color/app_yellow" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:alpha="0.6"
                                android:hint="Not Answered"
                                android:textColor="@color/app_yellow"
                                android:textColorHint="#aaF6C523"
                                android:singleLine="true"/>
                        </LinearLayout>

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha="0.4"
                        android:background="@drawable/line_divider"></View>

                    <LinearLayout xmlns:aigestudio="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <com.aigestudio.wheelpicker.WheelPicker
                            android:id="@+id/days"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"
                            android:background="@color/colorPrimaryDark"
                            aigestudio:wheel_atmospheric="true"
                            aigestudio:wheel_curved="true"
                            aigestudio:wheel_cyclic="true"
                            aigestudio:wheel_item_align="right"
                            aigestudio:wheel_item_text_color="#ccF6C523"
                            aigestudio:wheel_item_text_size="10sp"
                            aigestudio:wheel_selected_item_text_color="@color/app_yellow"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str17"
                            android:layout_margin="7dp"
                            android:textColor="#FFFFFF" />

                        <com.aigestudio.wheelpicker.WheelPicker
                            android:id="@+id/time_1"
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"
                            android:background="@color/colorPrimaryDark"
                            android:layout_weight="1"
                            aigestudio:wheel_atmospheric="true"
                            aigestudio:wheel_curved="true"
                            aigestudio:wheel_cyclic="true"
                            aigestudio:wheel_item_align="right"
                            aigestudio:wheel_item_text_color="#ccF6C523"
                            aigestudio:wheel_item_text_size="10sp"
                            aigestudio:wheel_selected_item_text_color="@color/app_yellow"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - "
                            android:layout_margin="7dp"
                            android:textColor="#FFFFFF" />

                        <com.aigestudio.wheelpicker.WheelPicker
                            android:id="@+id/time_2"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"
                            android:background="@color/colorPrimaryDark"
                            aigestudio:wheel_atmospheric="true"
                            aigestudio:wheel_curved="true"
                            aigestudio:wheel_cyclic="true"
                            aigestudio:wheel_item_align="right"
                            aigestudio:wheel_item_text_color="#ccF6C523"
                            aigestudio:wheel_item_text_size="10sp"
                            aigestudio:wheel_selected_item_text_color="@color/app_yellow"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"/>


                    </LinearLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/selector"
                        android:text="@string/str18"
                        android:id="@+id/add_new_available_date"
                        android:textColor="@color/app_yellow" />

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:id="@+id/available_date"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorPrimaryDark"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimaryDark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorPrimaryDark"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:paddingLeft="10dp"
                            android:text="@string/str19"
                            android:textColor="@color/app_yellow"
                            android:textSize="16dp" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="16dp"
                            android:layout_weight="2"
                            android:src="@drawable/gallery_place_holder" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha="0.4"
                        android:background="@drawable/line_divider"></View>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            android:id="@+id/text11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:alpha="0.6"
                            android:gravity="center"
                            android:text="@string/str20"
                            android:textColor="@color/app_yellow" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/text11"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/selector"
                            android:text="@string/str21"
                            android:textColor="@color/app_yellow" />

                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
