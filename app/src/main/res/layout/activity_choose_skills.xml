<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/background2"
        android:scaleType="matrix"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What things \nYou\'re Good At?"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:id="@+id/text"
        />
    <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/chosen_skills"
            xmlns:zhy="http://schemas.android.com/apk/res-auto"
            zhy:max_select="-1"
            android:layout_below="@+id/text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:isScrollContainer="true"
            android:layout_centerHorizontal="true"
            android:overScrollMode="always"
            android:layout_marginBottom="10dp">
        </com.zhy.view.flowlayout.TagFlowLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/search_drawable_combo"
        android:textCursorDrawable="@drawable/red_cursor"
        android:textColor="@color/white"
        android:gravity="center"
        android:singleLine="true"
        android:layout_gravity="center_vertical"
        android:id="@+id/search_skill_edit_text"
        android:textStyle="bold"
        android:layout_below="@id/chosen_skills"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="25dp"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/skill_list"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/search_skill_edit_text"
       ></android.support.v7.widget.RecyclerView>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/btn_border_gray"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:weightSum="10"
        android:orientation="horizontal"
        android:id="@+id/next_btn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_alignBottom="@+id/skill_list">

        <View
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="I\'m Done!"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:gravity="right"
            android:layout_weight="6"
            android:textSize="20sp"

            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:src="@drawable/proceed_white_arrow"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            />

    </LinearLayout>
</RelativeLayout>
