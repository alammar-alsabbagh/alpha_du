<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.procasy.dubarah_nocker.Activity.SignUpActivities.PhotoSignUp"
    android:background="@drawable/background2"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/drawable_photo"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/profile_image"
        android:layout_marginTop="40dp"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="5"
          >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:src="@drawable/take_picture"
                android:layout_gravity="center"
                android:id="@+id/take_picture" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#838383"
                android:text="Take Photo"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="5"
            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:src="@drawable/browse_picture"
                android:layout_gravity="center"
                android:id="@+id/browse_picture" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#838383"
                android:text="Browse Photo"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/btn_border_gray"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:weightSum="10"
        android:orientation="horizontal"
        android:id="@+id/next_btn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"

        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/last_pager"
            android:layout_marginLeft="30dp"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Finish!"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:gravity="right"
            android:layout_weight="6"
            android:textSize="20sp"

            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:src="@drawable/proceed_white_arrow"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            />

    </LinearLayout>

</RelativeLayout>
