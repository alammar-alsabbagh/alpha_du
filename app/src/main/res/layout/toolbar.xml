<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:minHeight="?attr/actionBarSize"
    local:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/drawer_btn"
            android:layout_width="@dimen/toolbar_dimen"
            android:layout_height="@dimen/toolbar_dimen"
            android:layout_alignParentLeft="true"
            android:layout_margin="2dp"
            android:src="@drawable/yellow_burger" />

        <ImageView
            android:id="@+id/white_nocker"
            android:layout_width="90dp"
            android:layout_height="@dimen/toolbar_dimen"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/drawer_btn"
            android:src="@drawable/yellow_nocker" />



        <RelativeLayout
            android:id="@+id/notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp">

            <RelativeLayout
                android:id="@+id/notification_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/notification1"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/notification" />
            </RelativeLayout>

            <TextView
                android:id="@+id/badge_notification_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/notification_layout"
                android:background="@drawable/badge_item_count"
                android:text="2"
                android:textColor="#FFF"
                android:textSize="10sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginRight="@dimen/toolbar_margin"
            android:layout_toLeftOf="@id/notification">

            <RelativeLayout
                android:id="@+id/message_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                >

                <Button
                    android:id="@+id/message1"
                    android:layout_width="36dp"
                    android:layout_height="24dp"
                    android:background="@drawable/message" />
            </RelativeLayout>

            <TextView
                android:id="@+id/badge_message_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/message_layout"
                android:background="@drawable/badge_item_count"
                android:text="2"
                android:textColor="#FFF"
                android:textSize="10sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/aptmnts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/toolbar_margin"
            android:layout_toLeftOf="@id/message">

            <RelativeLayout
                android:id="@+id/aptmnts_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/appointement" />
            </RelativeLayout>

            <TextView
                android:id="@+id/badge_aptmnts_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/aptmnts_layout"
                android:background="@drawable/badge_item_count"
                android:text="2"
                android:textColor="#FFF"
                android:textSize="10sp"
                android:textStyle="bold" />
        </RelativeLayout>


