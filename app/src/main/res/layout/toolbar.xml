<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:minHeight="?attr/actionBarSize"
    local:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/drawer_btn"
            android:layout_width="@dimen/toolbar_dimen"
            android:layout_height="@dimen/toolbar_dimen"
            android:layout_alignParentLeft="true"
            android:layout_margin="2dp"
            android:src="@drawable/burger_icon" />

        <ImageView
            android:id="@+id/white_nocker"
            android:layout_width="90dp"
            android:layout_height="@dimen/toolbar_dimen"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/drawer_btn"
            android:src="@drawable/white_nocker" />


        <ImageView
            android:id="@+id/notification"
            android:layout_width="@dimen/toolbar_dimen"
            android:layout_height="@dimen/toolbar_dimen"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/notification" />

        <ImageView
            android:id="@+id/message"
            android:layout_width="@dimen/toolbar_dimen"
            android:layout_height="@dimen/toolbar_dimen"
            android:layout_marginRight="@dimen/toolbar_margin"
            android:layout_toLeftOf="@id/notification"
            android:src="@drawable/message" />

        <ImageView
            android:id="@+id/aptmnts"
            android:layout_width="@dimen/toolbar_dimen"
            android:layout_height="@dimen/toolbar_dimen"
            android:layout_marginRight="@dimen/toolbar_margin"
            android:layout_toLeftOf="@id/message"
            android:src="@drawable/message" />

    </RelativeLayout>

</android.support.v7.widget.Toolbar>