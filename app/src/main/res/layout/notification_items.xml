<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/notification_items">

    <RelativeLayout
        android:id="@+id/aptmnts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="5dp">

        <RelativeLayout
            android:id="@+id/aptmnts_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/aptmnts1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/appointement" />
        </RelativeLayout>

        <TextView
            android:id="@+id/badge_aptmnts_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/aptmnts_layout"
            android:background="@drawable/badge_item_count"
            android:text="2"
            android:textColor="#FFF"
            android:textSize="10sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginLeft="5dp">

        <RelativeLayout
            android:id="@+id/message_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/message1"
                android:layout_width="36dp"
                android:layout_height="24dp"
                android:background="@drawable/message" />
        </RelativeLayout>

        <TextView
            android:id="@+id/badge_message_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/message_layout"
            android:background="@drawable/badge_item_count"
            android:text="2"
            android:textColor="#FFF"
            android:textSize="10sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">

        <RelativeLayout
            android:id="@+id/notification_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/notification1"
                android:layout_width="30dp"
                android:layout_height="33dp"
                android:background="@drawable/notification" />
        </RelativeLayout>

        <TextView
            android:id="@+id/badge_notification_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/notification_layout"
            android:background="@drawable/badge_item_count"
            android:text="2"
            android:textColor="#FFF"
            android:textSize="10sp"
            android:textStyle="bold" />
    </RelativeLayout>


</LinearLayout>