<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="75dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/view_line"
            android:id="@+id/why"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Why you recommend "
                android:textColor="@color/white"
                android:textSize="@dimen/large_text"
                android:id="@+id/t4"
                android:layout_marginLeft="40dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Amanda"
                android:textColor="@color/app_yellow"
                android:textSize="@dimen/large_text"
                android:id="@+id/t7"
                android:textStyle="bold"
                android:inputType="textCapWords"
                />

        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_alignEnd="@+id/view_line"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/t4"
            android:minHeight="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp">


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="0dp"
                android:id="@+id/radgroup2"></RadioGroup>

        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="44dp"
        android:id="@+id/top"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="left"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What languages does"
                android:textColor="@color/white"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:id="@+id/t1"
                android:textSize="@dimen/seventy" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amanda"
                    android:textColor="@color/app_yellow"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:id="@+id/t2"
                    android:textSize="@dimen/seventy"
                    android:inputType="textCapWords"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" speaks ? "
                    android:textColor="@color/white"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:id="@+id/t3"
                    android:textSize="@dimen/seventy" />

            </LinearLayout>

        </LinearLayout>

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add Amandaâ€™s top skill"
            android:textColorHint="#838383"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="#00000000"
            android:layout_marginTop="15dp"
            android:textColor="#ffffff"
            android:singleLine="true"
            android:id="@+id/skill"
            android:imeOptions="actionDone"
            android:textCursorDrawable="@drawable/red_cursor"
            android:paddingBottom="5dp"
            android:completionThreshold="1"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line_divider"
        android:layout_below="@+id/top"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/view_line"
        ></View>


    <LinearLayout
        android:id="@+id/wholething"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/selector"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="5"
            android:weightSum="5">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/proceed_white_arrow_inverse" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="4"
                android:gravity="left"
                android:text="Back"
                android:textColor="@color/white"
                android:textSize="@dimen/forty_eight"

                android:textStyle="bold"
                android:id="@+id/t5" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/next_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="5"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_weight="4"
                android:gravity="right"
                android:text="Next"
                android:textColor="@color/white"
                android:textSize="@dimen/forty_eight"

                android:textStyle="bold"
                android:id="@+id/t6" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/proceed_white_arrow" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
