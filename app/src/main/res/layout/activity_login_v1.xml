<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context="com.procasy.dubarah_nocker.LoginActivity">

    <LinearLayout
        android:id="@+id/everything"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="175dp"
            android:layout_height="84dp"
            android:layout_marginStart="25dp"
            android:src="@drawable/hourly_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@id/t1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:text="Usually skilled peaople like Amanda"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <TextView
                android:id="@id/t2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:text="are experts orpassionate hobbysts."
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/t3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginStart="20dp"
                android:text="LOG IN"
                android:textColor="@color/app_yellow"
                android:textSize="15dp"
                android:textStyle="normal|bold"
                tools:text="LOG IN " />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:alpha="0.7"
                android:background="@drawable/login_drawable_combo"
                android:orientation="vertical"
                android:weightSum="2">

                <!--<android.support.design.widget.TextInputLayout-->
                <!--android:id="@+id/username_text_input_layout"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1">-->

                <EditText
                    android:layout_weight="1"
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/str42"
android:theme="@style/loginEditTextStyle"
                    android:inputType="textEmailAddress"
                    android:singleLine="true" />

                <!--</android.support.design.widget.TextInputLayout>-->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:alpha="0.6"
                    android:background="@color/black_overlay"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:weightSum="10"
                    android:orientation="horizontal">

                    <!--<android.support.design.widget.TextInputLayout-->
                    <!--android:id="@+id/password_text_input_layout"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="1">-->

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="0dp"
                        android:layout_weight="9.4"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:hint="@string/str43"
                        android:inputType="textPassword"
                        android:theme="@style/loginEditTextStyle"
                        android:singleLine="true" />

                    <!--</android.support.design.widget.TextInputLayout>-->
                    <ImageView
                        android:id="@+id/eye"
                        android:layout_width="10dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.6"
                        android:src="@drawable/eye"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/button_color_primery"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:weightSum="10">

                <TextView

                    android:id="@+id/login_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="3dp"
                    android:layout_weight="8.5"
                    android:gravity="right"
                    android:text="Login"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sixty_four"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center|right"
                    android:layout_weight="1"
                    android:src="@drawable/proceed_white_arrow" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/t4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginStart="20dp"
                android:text="LOG IN"
                android:textColor="@color/app_yellow"
                android:textSize="15dp"
                tools:text="LOG IN " />

            <TextView
                android:id="@+id/t5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginStart="10dp"
                android:text="OR"
                android:textColor="@color/app_yellow"
                android:textSize="15dp"
                tools:text="OR " />

            <TextView
                android:id="@+id/t6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginStart="10dp"
                android:text="SIGN UP"
                android:textColor="@color/app_yellow"
                android:textSize="15dp"
                tools:text="SIGN UP" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/button_color_primery"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:weightSum="10">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical|right"
                android:layout_weight="1"
                android:src="@drawable/facebook" />

            <TextView
                android:id="@+id/facebook_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="3dp"
                android:layout_weight="7.5"
                android:gravity="left"
                android:text="Facebook"
                android:textColor="@color/white"
                android:textSize="@dimen/sixty_four"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_gravity="center|right"
                android:layout_weight="1"
                android:src="@drawable/proceed_white_arrow" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/twitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/button_color_primery"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:weightSum="10">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical|right"
                android:layout_weight="1"
                android:src="@drawable/twitter" />

            <TextView
                android:id="@+id/twitter_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="3dp"
                android:layout_weight="7.5"
                android:gravity="left"
                android:text="Twitter"
                android:textColor="@color/white"
                android:textSize="@dimen/sixty_four"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_gravity="center|right"
                android:layout_weight="1"
                android:src="@drawable/proceed_white_arrow" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linkedin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/button_color_primery"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:weightSum="10">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical|right"
                android:layout_weight="1"
                android:src="@drawable/linkedin" />

            <TextView
                android:id="@+id/linkedin_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="3dp"
                android:layout_weight="7.5"
                android:gravity="left"
                android:text="Linkedin"
                android:textColor="@color/white"
                android:textSize="@dimen/sixty_four"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="16dp"
                android:layout_gravity="center|right"
                android:layout_weight="1"
                android:src="@drawable/proceed_white_arrow" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/t7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:text="&#169;PROCASY INC."
        android:textColor="@color/copy_right"
        android:textSize="17dp" />


</LinearLayout>
